# Docker environment variables for VisionSub
# Copy this file to .env and fill in your values

# Application Configuration
VISIONSUB_ENVIRONMENT=production
VISIONSUB_LOG_LEVEL=INFO
VISIONSUB_DEBUG=false
VISIONSUB_SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:////app/data/visionsub.db
# For PostgreSQL: postgresql://user:password@host:port/database
POSTGRES_DB=visionsub
POSTGRES_USER=visionsub
POSTGRES_PASSWORD=your-secure-password-here

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your-redis-password-here

# Cache Configuration
VISIONSUB_CACHE_ENABLED=true
VISIONSUB_CACHE_SIZE=512MB
VISIONSUB_CACHE_TTL=3600

# Performance Configuration
VISIONSUB_MAX_WORKERS=4
VISIONSUB_THREAD_POOL_SIZE=8
VISIONSUB_BATCH_SIZE=10

# Security Configuration
VISIONSUB_API_KEY=your-api-key-here
VISIONSUB_ALLOWED_HOSTS=localhost,127.0.0.1
VISIONSUB_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# File Storage Configuration
VISIONSUB_UPLOAD_DIR=/app/uploads
VISIONSUB_OUTPUT_DIR=/app/processed
VISIONSUB_MAX_FILE_SIZE=100MB

# OCR Configuration
VISIONSUB_DEFAULT_OCR_ENGINE=paddle
VISIONSUB_TESSERACT_DATA_PATH=/usr/share/tesseract-ocr/4.00/tessdata
VISIONSUB_PADDLE_OCR_LANG=ch

# Monitoring Configuration
VISIONSUB_MONITORING_ENABLED=false
VISIONSUB_METRICS_PORT=9090
GRAFANA_PASSWORD=admin

# Email Configuration (for notifications)
VISIONSUB_EMAIL_ENABLED=false
VISIONSUB_SMTP_HOST=smtp.gmail.com
VISIONSUB_SMTP_PORT=587
VISIONSUB_SMTP_USER=your-email@gmail.com
VISIONSUB_SMTP_PASSWORD=your-app-password

# Web Interface Configuration
VISIONSUB_WEB_ENABLED=false
VISIONSUB_WEB_HOST=0.0.0.0
VISIONSUB_WEB_PORT=8080

# Development Configuration
VISIONSUB_DEV_MODE=false
VISIONSUB_RELOAD_ENABLED=false
VISIONSUB_TEST_MODE=false

# Docker Configuration
COMPOSE_PROJECT_NAME=visionsub
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=visionsub